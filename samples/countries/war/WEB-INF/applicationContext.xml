	</bean>
	<bean id="secondDaoCountry" class="com.interface21.samples.countries.dao.DaoCountryJdbcMySql"
		singleton="true"/>
	-->

	<!-- ========================= End of PERSISTENCE DEFINITIONS ========================= -->
	
</beans>
