<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans 
	SYSTEM "file:///c://work//spring//main//spring-beans.dtd">


<beans>
	
	<bean id="jenny" class="com.interface21.beans.TestBean">
		<property name="name"><value>Jenny</value></property>
		<property name="age"><value>30</value></property>
		<property name="spouse"><ref bean="david"/></property>
	</bean>
	
	<bean id="david" class="com.interface21.beans.TestBean">	
		<property name="name"><value>David</value></property>
		<property name="age"><value>27</value></property>
		<property name="spouse"><ref bean="jenny"/></property>
	</bean>
	
	<bean id="jenks" class="com.interface21.beans.TestBean" singleton="false">	
		<property name="name"><value>Andrew</value></property>
		<property name="age"><value>36</value></property>
		<property name="spouse"><ref bean="jenny"/></property>
	</bean>

	<bean id="emma" class="com.interface21.beans.TestBean">
		<property name="name"><value>Emma</value></property>
		<property name="age"><value>31</value></property>
		<property name="spouse"><ref bean="jenks"/></property>
	</bean>
	
	<bean id="georgia" class="com.interface21.beans.TestBean">	
		<property name="name"><value>Georgia</value></property>
		<property name="age"><value>33</value></property>
		<property name="spouse"><ref bean="jenks"/></property>
	</bean>

	<bean id="ego" class="com.interface21.beans.TestBean">
		<property name="name"><value>ego</value></property>
		<property name="age"><value>1</value></property>
		<property name="spouse"><ref bean="ego"/></property>
	</bean>

</beans>
	
	